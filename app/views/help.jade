.page-header
	h2.nullable {{ ui.help.header }}


.tabbable.tabs-left


	ul.nav.nav-tabs.nav-tabs-app(style='margin-right: 0px;')
		li(class="{{(views.web==true) && 'active'}}")
			a(data-toggle='tab', ng-click='setViewTo("web")')
				span.icomoon(data-icon='', aria-hidden='true')
				| Web
		li(class="{{(views.ios==true) && 'active'}}", ng-show="false")
			a(data-toggle='tab', ng-click='setViewTo("ios")')
				span.icomoon(data-icon='', aria-hidden='true')
				| IOS
		li(class="{{(views.android==true) && 'active'}}",
				ng-show='app.domainPermission.chat')
			a(data-toggle='tab', ng-click='setViewTo("android")')
				span.icomoon(data-icon='', aria-hidden='true')
				| Android


	.tab-content


		#web.tab-pane(class="{{(views.web==true) && 'active'}}")
			.tab-header
				h3.pull-left {{ ui.help.web.title }}
			hr
			h4 {{ ui.help.web.newMember }}
			iframe(width="560" height="315" src="https://www.youtube.com/embed/s4rOjMugsxM?rel=0" frameborder="0" allowfullscreen)
			br
			br
			h4 {{ ui.help.manuelTeamTelephone.title }}
			a(href="../downloads/HandleidingTeamTelefoon.pdf" title="Download TeamTelefoon handleiding" download="Handleiding TeamTelefoon.pdf")
				button.btn-primary.btn-mini.downloadButton 
					i.glyphicon.glyphicon-download-alt
					|  {{ ui.help.manuelTeamTelephone.download }}

		#ios.tab-pane(class="{{(views.ios==true) && 'active'}}")
			.tab-header
				h3.pull-left IOS
			hr
			article: p IOS content..


		#android.tab-pane(class="{{(views.android==true) && 'active'}}")
			.tab-header
				h3.pull-left Android
			hr
			h4 {{ ui.help.android.addClientReport }}
			iframe(width="560" height="315" src="https://www.youtube.com/embed/yQ9WjjURw2c?rel=0" frameborder="0" allowfullscreen)
			br
			br
			br
			h4 {{ ui.help.android.callClient }}
			iframe(width="560" height="315" src="https://www.youtube.com/embed/IyQwP3zB7PI?rel=0" frameborder="0" allowfullscreen)
