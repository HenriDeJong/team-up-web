#confirmProfileModal.modal.fade(tabindex='-1',
role='dialog',
aria-labelledby='confirmProfileModalLabel',
aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal')
					span(aria-hidden='true') Ã—
					span.sr-only Close
				h4#confirmProfileModalLabel.modal-title {{ui.teamup.confirms.deleteMemberFromTeamTitle}}
			.modal-body
				| {{ui.teamup.confirms.deleteMemberFromTeam}}
			.modal-footer
				button.btn.btn-default(type='button',
				data-dismiss='modal') {{ui.teamup.confirms.cancel}}
				button.btn.btn-primary(type='button',
				ng-click='deleteProfile()') {{ui.teamup.confirms.remove}}

section#profile
	.page-header: h2 {{data.name}}

	.row-fluid

		.tabbable.tabs-left

			ul.nav.nav-tabs.nav-tabs-app(style='margin-right: 0px;')
				li(class="{{(views.profile==true || views.edit==true || views.editImg==true || views.editPassword==true) && 'active'}}")
					a(data-toggle='tab',
					ng-click='fixTabHeight("profileTab"); setViewTo("profile")')
						span.entypo ðŸ‘¤
						| {{ui.profile.profile}}

			.tab-content

				#profileTab.tab-pane(class="{{(views.profile==true) && 'active'}}")
					.tab-header
						h3.pull-left {{data.firstName}} {{data.lastName}}
						button.btn.pull-right.btn-info.marginLeftTen(type='button',
						ng-click='confirmDeleteProfile()',
						ng-hide='app.resources.role > 1 || teams.length == 0') {{ui.teamup.del}}
						button.btn.pull-right.btn-info(type='button',
						ng-click='editProfile()') {{ui.profile.edit}}
					hr
					.row-fluid
						.widget(class="{{(!browser.mobile) && 'span9' || 'span12'}}")
							dl
								dt {{ui.teamup.teams}}
								dd(ng-show='teams.length == 0') Geen team geselecteerd
								dd
									span(ng-repeat='team in teams')
										span(ng-hide='app.resources.role > 1')
											a(href='#/team?uuid={{team.uuid}}#team') {{team.name}}
										span(ng-hide = '{{((teams.length-1) == $index)}}') ,
										span(ng-show = 'app.resources.role > 1') {{team.name}}
								dt {{ui.teamup.role}}
								dd {{data.role|translateRole}}
								dt {{ui.profile.phone}}
								dd {{data.phone}}
								//dt {{ui.teamup.func}}
								//dd {{data.function|translateFunc}}
								dt {{ui.profile.birthday}}
								dd {{data.birthDate}}
						.widget.profilePic(class="{{(!browser.mobile) && 'span3' || 'span12'}}")
							.roundedPicLarge(back-img = '{{data.uuid | avatar:"team":"368" }}' class='{{data.states|stateColor}}')
							div
								a(href='#/profile/{{data.uuid}}#editImg')
									button.btn.btn-mini.btn-primary(ng-click='editImg()')
										i.icon-edit
								button.btn.btn-mini.btn-primary(type='submit',
								ng-click='removeImg(data.uuid)')
									i.icon-trash


				#editTab.tab-pane(class="{{(views.edit==true) && 'active'}}")
					div(style='overflow: hidden; height: 35px')
						h3.pull-left(style='margin-top: 0;') {{ui.profile.editProfile}}
						button.btn.pull-right.btn-info(type='button',
						ng-click='editPassword()') {{ui.profile.changePassWord}}
					hr
					form.form-vertical(name='profileForm', novalidate)
						.control-group
							label.control-label {{ui.profile.firstName}}
							.controls
								input.span4(type='text',
								ng-model='profile.firstName',
								value='{{data.firstName}}')
						.control-group
							label.control-label {{ui.profile.lastName}}
							.controls
								input.span4(type='text',
								ng-model='profile.lastName',
								value='{{data.lastName}}')
						.control-group(ng-hide='(app.resources.role > 1 && profile.uuid != app.resources.uuid) || (currentRole > 1 &&  profile.uuid == app.resources.uuid)')
							label.control-label {{ui.teamup.role}}
							.controls
								select(ng-model='profile.role',
								ng-options='r.id as r.label for r in roles',
								ng-selected='currentRole')
						.control-group
							label.control-label {{ui.profile.phone}}
							.controls
								input.span3.form-control.inputPhoneNumber(type='text',
								ng-model='profile.phone',
								ng-change='parsePhoneNumber(profile.phone)',
								value='{{data.phone}}')
								p.text-danger(ng-hide='phoneNumberParsed.result')
									small
										i {{phoneNumberParsed.message}}
								p.text-success(ng-show='phoneNumberParsed.result')
									small
										i {{phoneNumberParsed.message}}
						//.control-group
						//	label.control-label {{ui.teamup.func}}
						//	.controls
						//		select(ng-model='profile.function',
						//		ng-options='f.id as f.label for f in mfuncs',
						//		ng-selected='profile.function')
						.form-group.dater
							label.control-label {{ui.profile.birthday}}
							.controls
								input(name='date-start',
								type='text',
								ng-model='profile.birthDate', 
								data-date-type='string',
								data-date-format='dd-MM-yyyy',
								bs-datepicker='',
								data-toggle='datepicker')
								i.icon-calendar
						.form-actions
							button.btn.btn-success(type='submit',
							ng-click='save(profile)') {{ui.profile.saveProfile}}

				#editImgTab.tab-pane(class="{{(views.editImg==true) && 'active'}}")
					div(style='overflow: hidden; height: 35px')
						h3.pull-left(style='margin-top: 0;')
							| {{ui.profile.editProfileImg}} : {{data.firstName}} {{data.lastName}}
					hr
					div.roundedPicLarge(back-img = '{{data.uuid | avatar:"team":"368" }}')
					#uploadImgModule
						form.form-vertical(enctype='multipart/form-data')
							uploader(action='{{uploadURL}}')
							
				#editPasswordTab.tab-pane(class="{{(views.editPassword==true) && 'active'}}")
					div(style='overflow: hidden; height: 35px')
						h3.pull-left(style='margin-top: 0;')
							| {{ui.profile.changePassWord}}
					hr
					form.form-vertical(name='passWordForm', novalidate)
						fieldset
							.form-group(ng-hide='(app.resources.role > 1 && profile.uuid != app.resources.uuid)')
								label.control-label {{ui.profile.oldPassword}}
								.controls
									input.span3(type='password',
									ng-model='profile.oldpass')
							.form-group(ng-hide='(app.resources.role > 1 && profile.uuid != app.resources.uuid)', ng-class="{ 'has-error' : passWordForm.password.$invalid && !passWordForm.password.$pristine }")
								label.control-label {{ui.profile.newPass}}
								.controls
									input.span3.form-control(type='password',
									ng-model='profile.newpass',
									name='password',
									required,
									ng-minlength="8",
									ng-maxlength="20")
									span.help-block(ng-show='passWordForm.password.$invalid && !passWordForm.password.$pristine')
										small
											i
											| {{ ui.validation.password.required }}
										small(ng-show="passWordForm.password.$error.minlength")
											i
											| {{ ui.validation.password.amountMinChars(8) }} 
										small(ng-show="passWordForm.password.$error.maxlength")
											i
											| {{ ui.validation.password.amountMaxChars(20) }}
							.form-group(ng-hide='(app.resources.role > 1 && profile.uuid != app.resources.uuid)')
								label.control-label {{ui.profile.newPassRepeat}}
								.controls
									input.span3(type='password',
									ng-model='profile.newpassrepeat')
							.form-actions
								button.btn.btn-success(type='submit',
									ng-click='savePassword(profile)') {{ui.profile.safePassword}}
