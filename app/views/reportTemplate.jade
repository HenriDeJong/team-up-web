.modal(tabindex="-1", role="dialog")
	.modal-dialog
		.modal-content
			.modal-header(ng-show="title")
				button(class="close" ng-click="$hide()") &times;
				h4(class="modal-title" ng-bind="title")
			.modal-body(ng-bind="content")
				table
					thead
						tr
							th {{ui.teamup.date}}
							th {{ui.teamup.writenBy}}
							th Cliënt
					tbody
						tr
							td {{report.creationTime|nicelyDate}}
							td {{report.author.firstName}} {{report.author.lastName}}
							td {{report.client.firstName}} {{report.client.lastName}}
			.modal-footer
				button(class="btn btn-default" ng-click="$hide()") Sluiten
