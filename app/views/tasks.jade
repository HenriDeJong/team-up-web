.page-header

.tabbable.tabs-left

  ul.nav.nav-tabs.nav-tabs-app(style='margin-right: 0px;')
    li(class="{{(views.myTasks==true) && 'active'}}")
      a(data-toggle='tab',
      ng-click='setViewTo("myTasks")')
        span.icomoon(data-icon='',
        aria-hidden='true')
        | Mijn Taken
    li(class="{{(views.allTasks==true) && 'active'}}")
      a(data-toggle='tab',
      ng-click='setViewTo("allTasks")')
        span.icomoon(data-icon='',
        aria-hidden='true')
        | Alle Taken
    li(class="{{(views.newTask==true) && 'active'}}")
      a(data-toggle='tab',
      ng-click='setViewTo("newTask")')
        span.icomoon(data-icon='',
        aria-hidden='true')
        | Nieuwe Taak

  .tab-content

    #myTasks.tab-pane(class="{{(views.myTasks==true) && 'active'}}")
      .tab-header
        h3.pull-left Mijn taken
        button.btn.pull-right.btn-info.marginLeftTen(type='button') {{ui.teamup.del}}
        button.btn.pull-right.btn-info(type='button') {{ui.teamup.edit}}
      .tab-header.hide
        input.pull-left(type='text')
        button.btn.pull-right.btn-info.marginLeftTen(type='reset') {{ui.teamup.cancel}}
        button.btn.pull-right.btn-info.marginLeftTen(type='button') {{ui.teamup.save}}
      hr
      p.hide
        | {{ui.teamup.noMembers}}
      div
        table.table.table-striped.taskTable
          thead
            tr
              th
              th
                a Naam Cliënt
              th
                a Informatie
              th
              th
                a Naam Lid
              th
          tbody
            tr
              td
                .roundedPicSmall
              td
                a(href='#') Piet de Vries
              td
                dl
                  span.stateIcon.icon-location4(aria-hidden='true', data-icon='')
                  span.taskInfo 12,1 km Molenweg Dordrecht
                    a(href='') {{ui.teamup.map}}
                dl
                  span.stateIcon.icon-location4(aria-hidden='true', data-icon='')
                  span.taskInfo Maandag 10.00 - 13.00 uur
                dl
                  dd Lorem ipsum dolor sit amet, consectetur adipiscing elit.
              td
                .roundedPicSmall
              td
                a(href='#') Remco van Schie
              td
                .pull-right
                  a(href='#')
